<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:letmeknow="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.applilandia.letmeknow.NotificationListActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/taskToolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        letmeknow:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"></android.support.v7.widget.Toolbar>

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.applilandia.letmeknow.views.SnackBar
            android:id="@+id/snackBarNotifications"
            android:layout_width="match_parent"
            android:layout_height="@dimen/snack_bar_single_line_height"
            android:layout_gravity="bottom" />

    </FrameLayout>

</LinearLayout>
